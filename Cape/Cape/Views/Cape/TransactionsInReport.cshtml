@model Cape.ViewModels.TransactionsListViewModel
@{
    ViewBag.Title = "Transactions in this report";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@foreach (var transaction in Model.ListOfTransactions)
{
    <div class="Transaction">
        @Html.DisplayFor(modelItem => transaction.Amount)
        @Html.DisplayFor(modelItem => transaction.Description)
        @Html.DisplayFor(modelItem => transaction.Date)
        @Html.DisplayFor(modelItem => transaction.Category.Name)
        <div id=@Html.DisplayFor(modelItem => transaction.TransactionId)> @Html.DropDownList("CategoriesList", null, new { @class = "CategoriesList" })</div>
    </div>
}